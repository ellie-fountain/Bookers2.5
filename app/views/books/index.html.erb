<div class="container">
  <div class="row">
  	<div class="col-xs-3">
<%= render 'users/list', user:@user, book:@book %>
</div>
<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
		  <tbody>
		  	<% @books.each do |book| %>
		  	<tr>
             <td>
              <%= attachment_image_tag book.user, :profile_image, class: "img-circle  profile-thumb", fallback: "no_image.jpg", size: "40x40"%><br>
              <%= book.user.name %>
             </td>
             <td><%= link_to book.title, book_path(book) %></td>
             <td><%= book.body %></td>
          
      </tr>
      <% end %>
    </tbody></table>

  </div>
</div>
</div>