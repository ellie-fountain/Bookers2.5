 <% if book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
        <li><%= render "devise/shared/error_messages", resource: book %></li>
    </ul>
  </div>
<% end %>


    <h2>Users info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 260, 260, class: "img-circle  profile-thumb", fallback: "no_image.jpg"%>
    <h3>name</h3>
    <h3><%= user.name %></h3>
    <h3>introduction</h3>
    <h3><%= user.introduction %></h3>
    <% if user.id == current_user.id %>
    <%= link_to 'edit', edit_user_path(user), class:'btn btn-default' %>
    <% else %>
    <%= link_to 'edit', user_path(current_user), class:'btn btn-default' %>
    <% end %>




    <h2>New book</h2>
    <%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'create book' %>
 
   <% end %>
    